<script>
    // Cargar URLs al abrir la pÃ¡gina
    async function loadUserUrls() {
        try {
            const response = await fetch('/api/user/urls');
            const data = await response.json();
            
            if (data.success && data.urls.length > 0) {
                const urlsContainer = document.getElementById('urls-container');
                urlsContainer.innerHTML = '';
                
                data.urls.forEach(url => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${url.url}</td>
                        <td>
                            <span class="status status-${url.lastStatus || 'inactive'}">
                                ${url.lastStatus || 'Pendiente'}
                            </span>
                        </td>
                        <td>${url.notificationType || 'email'}</td>
                        <td>${url.lastChecked ? new Date(url.lastChecked).toLocaleString() : 'Nunca'}</td>
                        <td>
                            <button class="btn btn-danger" onclick="deleteUrl('${url._id}')">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                        </td>
                    `;
                    urlsContainer.appendChild(row);
                });
            }
        } catch (error) {
            console.error('Error loading URLs:', error);
        }
    }
    
    // Cargar URLs cuando la pÃ¡gina se abre
    document.addEventListener('DOMContentLoaded', loadUserUrls);
</script>
