<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Cuenta - OpoAlert</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Estilos específicos para account.ejs */
        .account-container {
            display: grid;
            grid-template-columns: 300px 1fr;
            gap: 30px;
            margin-top: 20px;
        }
        
        .account-sidebar {
            background: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            height: fit-content;
        }
        
        .account-content {
            background: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }
        
        .user-profile {
            text-align: center;
            margin-bottom: 25px;
        }
        
        .user-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            font-size: 2rem;
            color: white;
        }
        
        .sidebar-menu {
            list-style: none;
            padding: 0;
        }
        
        .sidebar-menu li {
            margin-bottom: 10px;
        }
        
        .sidebar-menu a {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: var(--dark);
            text-decoration: none;
            border-radius: 5px;
            transition: all 0.3s;
        }
        
        .sidebar-menu a:hover, 
        .sidebar-menu a.active {
            background: var(--light);
            color: var(--primary);
        }
        
        .sidebar-menu i {
            margin-right: 10px;
            width: 20px;
        }
        
        .section-title {
            font-size: 1.5rem;
            color: var(--secondary);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }
        
        .section-title i {
            margin-right: 10px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--dark);
        }
        
        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="url"],
        select {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
            transition: border-color 0.3s;
        }
        
        input:focus,
        select:focus {
            border-color: var(--primary);
            outline: none;
        }
        
        .url-list {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        
        .url-list th,
        .url-list td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }
        
        .url-list th {
            background-color: #f8f9fa;
            font-weight: 600;
        }
        
        .url-list tr:hover {
            background-color: #f8f9fa;
        }
        
        .status {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 500;
        }
        
        .status-active {
            background-color: #e7f6e9;
            color: #2e7d32;
        }
        
        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }
        
        .status-error {
            background-color: #ffebee;
            color: #d32f2f;
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-content.active {
            display: block;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: var(--light);
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }
        
        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            color: var(--primary);
            margin: 10px 0;
        }
        
        @media (max-width: 968px) {
            .account-container {
                grid-template-columns: 1fr;
            }
            
            .account-sidebar {
                order: 2;
            }
            
            .account-content {
                order: 1;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <div class="container">
        <div class="account-container">
            <!-- Sidebar -->
            <div class="account-sidebar">
                <div class="user-profile">
                    <div class="user-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <h3><%= user.email %></h3>
                    <span class="user-plan <%= user.plan %>"><%= user.plan %></span>
                </div>
                
                <ul class="sidebar-menu">
                    <li><a href="#" class="active" onclick="showTab('urls')">
                        <i class="fas fa-link"></i>Mis URLs
                    </a></li>
                    <li><a href="#" onclick="showTab('profile')">
                        <i class="fas fa-user-cog"></i>Perfil
                    </a></li>
                    <li><a href="#" onclick="showTab('notifications')">
                        <i class="fas fa-bell"></i>Notificaciones
                    </a></li>
                    <li><a href="/pricing">
                        <i class="fas fa-crown"></i>Mejorar Plan
                    </a></li>
                    <li><a href="/">
                        <i class="fas fa-home"></i>Volver al Inicio
                    </a></li>
                </ul>
            </div>

            <!-- Contenido Principal -->
            <div class="account-content">
                <!-- Pestaña: Mis URLs -->
                <div id="urls-tab" class="tab-content active">
                    <h2 class="section-title">
                        <i class="fas fa-link"></i>Mis URLs Monitorizadas
                    </h2>
                    
                    <div class="stats-grid">
                        <div class="stat-card">
                            <i class="fas fa-globe fa-2x"></i>
                            <div class="stat-number" id="total-urls">0</div>
                            <small>Webs monitorizadas</small>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-check-circle fa-2x"></i>
                            <div class="stat-number" id="active-urls">0</div>
                            <small>Activas</small>
                        </div>
                        <div class="stat-card">
                            <i class="fas fa-clock fa-2x"></i>
                            <div class="stat-number">12:00</div>
                            <small>Próxima verificación</small>
                        </div>
                    </div>

                    <div id="urls-container">
                        <table class="url-list">
                            <thead>
                                <tr>
                                    <th>URL</th>
                                    <th>Estado</th>
                                    <th>Notificaciones</th>
                                    <th>Última verificación</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="urls-list">
                                <% if (userUrls && userUrls.length > 0) { %>
                                    <% userUrls.forEach(function(url) { %>
                                        <tr>
                                            <td><%= url.url %></td>
                                            <td>
                                                <span class="status status-<%= url.status || 'pending' %>">
                                                    <%= getStatusText(url.status) %>
                                                </span>
                                            </td>
                                            <td><%= getNotificationTypeText(url.notificationType) %></td>
                                            <td><%= url.lastChecked ? new Date(url.lastChecked).toLocaleString() : 'Nunca' %></td>
                                            <td>
                                                <button class="btn btn-danger" onclick="deleteUrl('<%= url._id %>')">
                                                    <i class="fas fa-trash"></i> Eliminar
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" style="text-align: center; padding: 40px; color: var(--gray);">
                                            <i class="fas fa-inbox fa-3x" style="margin-bottom: 15px;"></i>
                                            <p>No tienes URLs monitorizadas</p>
                                            <a href="/" class="btn" style="margin-top: 15px;">
                                                <i class="fas fa-plus"></i>Añadir primera URL
                                            </a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pestaña: Perfil -->
                <div id="profile-tab" class="tab-content">
                    <h2 class="section-title">
                        <i class="fas fa-user-cog"></i>Configuración de Perfil
                    </h2>
                    
                    <form id="profile-form">
                        <div class="form-group">
                            <label for="email">Email actual</label>
                            <input type="email" id="email" value="<%= user.email %>" disabled>
                        </div>
                        
                        <div class="form-group">
                            <label for="new-email">Nuevo email</label>
                            <input type="email" id="new-email" placeholder="nuevo@email.com">
                        </div>
                        
                        <div class="form-group">
                            <label for="current-password">Contraseña actual</label>
                            <input type="password" id="current-password" placeholder="Para confirmar cambios">
                        </div>
                        
                        <div class="form-group">
                            <label for="new-password">Nueva contraseña</label>
                            <input type="password" id="new-password" placeholder="Dejar en blanco para no cambiar">
                        </div>
                        
                        <button type="submit" class="btn">
                            <i class="fas fa-save"></i>Guardar cambios
                        </button>
                    </form>
                </div>

                <!-- Pestaña: Notificaciones -->
                <div id="notifications-tab" class="tab-content">
                    <h2 class="section-title">
                        <i class="fas fa-bell"></i>Configuración de Notificaciones
                    </h2>
                    
                    <form id="notifications-form">
                        <div class="form-group">
                            <label>Métodos de notificación preferidos</label>
                            <div style="display: flex; gap: 20px; margin-top: 10px;">
                                <label style="display: flex; align-items: center;">
                                    <input type="checkbox" name="email-notifications" checked style="margin-right: 8px;">
                                    Email
                                </label>
                                <label style="display: flex; align-items: center;">
                                    <input type="checkbox" name="telegram-notifications" style="margin-right: 8px;">
                                    Telegram
                                </label>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="telegram-id">ID de Telegram</label>
                            <input type="text" id="telegram-id" placeholder="@tu_usuario_de_telegram">
                            <small>Para obtener tu ID de Telegram, escribe a @userinfobot en Telegram</small>
                        </div>
                        
                        <div class="form-group">
                            <label for="notification-frequency">Frecuencia de notificaciones</label>
                            <select id="notification-frequency">
                                <option value="immediate">Inmediatas</option>
                                <option value="daily">Resumen diario</option>
                                <option value="both">Ambas</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn">
                            <i class="fas fa-save"></i>Guardar configuración
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script>
        // Función para cambiar pestañas
        function showTab(tabName) {
            // Ocultar todas las pestañas
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Mostrar la pestaña seleccionada
            document.getElementById(tabName + '-tab').classList.add('active');
            
            // Actualizar menú activo
            document.querySelectorAll('.sidebar-menu a').forEach(link => {
                link.classList.remove('active');
            });
            event.target.classList.add('active');
        }

        // Funciones auxiliares para mostrar estados
        function getStatusText(status) {
            const statusMap = {
                'success': 'Activa',
                'pending': 'Pendiente',
                'error': 'Error',
                'changed': 'Con cambios'
            };
            return statusMap[status] || 'Pendiente';
        }

        function getNotificationTypeText(type) {
            const typeMap = {
                'email': 'Email',
                'telegram': 'Telegram',
                'both': 'Ambos'
            };
            return typeMap[type] || 'Email';
        }

        async function deleteUrl(urlId) {
            if (confirm('¿Estás seguro de que quieres eliminar esta URL?')) {
                try {
                    const response = await fetch(`/api/urls/${urlId}`, {
                        method: 'DELETE'
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        alert('URL eliminada correctamente');
                        location.reload(); // Recargar la página para ver los cambios
                    } else {
                        alert('Error: ' + data.error);
                    }
                } catch (error) {
                    alert('Error de conexión');
                }
            }
        }

        // Formularios
        document.getElementById('profile-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            alert('Funcionalidad de actualización de perfil en desarrollo');
        });

        document.getElementById('notifications-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            alert('Configuración de notificaciones guardada');
        });
    </script>
</body>
</html>
